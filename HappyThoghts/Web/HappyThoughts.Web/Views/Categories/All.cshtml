@model IEnumerable<HappyThoughts.Web.ViewModels.Categories.CategoryInfoViewModel>

@{
    ViewData["Title"] = "All Categories";
}

<h2 class="text-center">All Categories</h2>

<hr />

<div class="row">
    @foreach (var category in Model)
    {
        <div class="col-md-4 text-center categoryBottom">
            <a asp-controller="Categories" asp-action="ByName" asp-route-name="@category.Name">
                <div class="card list-group-item-action" style="width: 18rem;">
                    <img class="card-img-top" src="@category.PictureUrl" alt="@category.Name" height="200">
                    <div class="card-body">
                        <p class="card-text">@category.Name  (@category.TopicsCount)</p>
                    </div>
                </div>
            </a>

        </div>
    }
</div>
