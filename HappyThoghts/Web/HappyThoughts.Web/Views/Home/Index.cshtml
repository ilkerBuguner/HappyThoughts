@model HappyThoughts.Web.ViewModels.Topics.TopicsListingViewModel

@using HappyThoughts.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@using HappyThoughts.Common
@{
    this.ViewData["Title"] = "Home Page";
}
<!-- Page Content -->
<div class="container">
    <div class="row col-lg-9 text-center">
        <div class="btn-group btn-group-toggle col-lg-11">
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Today</a>
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Trend</a>
            <a class="btn btn-primary" asp-controller="Categories" asp-action="All">Categories</a>
        </div>
    </div>

    <br />

    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">
            <div class="list-group-horizontal-sm">
                @foreach (var topic in Model.Topics)
                {
                    <a href="/Topics/Details?topicId=@topic.Id" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@topic.Title</h5>
                            <small>@topic.CreatedOn</small>
                        </div>
                        <p class="mb-1">@topic.Content</p>
                        <small>Author: @topic.AuthorUsername</small>
                    </a>
                }
            </div>
        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Side Widget -->
            @if (!this.SignInManager.IsSignedIn(this.User))
            {
                <div class="card my-4">
                    <h5 class="card-header">Why are you still waiting?</h5>
                    <div class="card-body">
                        Aren't you tired of working in boring plazas? Relieve your stress, share your knowledge.
                    </div>
                    <a href="/Identity/Account/Register" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Register</a>
                </div>
            }
            <!-- Search Widget -->
            <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-outline-primary" type="button">Search</button>
                        </span>
                    </div>
                </div>
            </div>

            <div class="card my-4">
                <h5 class="card-header">Popular Categories</h5>
                <ul class="list-group">
                    <a href="#">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Cras justo odio
                            <span class="badge badge-primary badge-pill">14</span>
                        </li>
                    </a>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Dapibus ac facilisis in
                        <span class="badge badge-primary badge-pill">2</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Morbi leo risus
                        <span class="badge badge-primary badge-pill">1</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Morbi leo risus
                        <span class="badge badge-primary badge-pill">1</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Morbi leo risus
                        <span class="badge badge-primary badge-pill">1</span>
                    </li>

                </ul>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Popular Categories</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">Web Design</a>
                                </li>
                                <li>
                                    <a href="#">HTML</a>
                                </li>
                                <li>
                                    <a href="#">Freebies</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">JavaScript</a>
                                </li>
                                <li>
                                    <a href="#">CSS</a>
                                </li>
                                <li>
                                    <a href="#">Tutorials</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
<!-- Bootstrap core JavaScript -->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
