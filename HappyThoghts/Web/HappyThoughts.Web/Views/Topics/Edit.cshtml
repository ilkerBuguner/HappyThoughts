@model HappyThoughts.Web.ViewModels.Topics.TopicEditViewModel

@{
    ViewData["Title"] = "Create Topic";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<h1 class="text-center mb-3">Edit Topic</h1>
<hr />
<div>
    <div class="offset-md-1 col-md-10 offset-sm-0 col-sm-12 card border border-primary">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" value="@Model.Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="20" value="@Model.Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group disabled">
                <fieldset disabled>
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" placeholder="@Model.CategoryName" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </fieldset>
            </div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="AuthorId" value="@Model.AuthorId" />
            <div class="form-group">
                <input asp-controller="Topics" asp-action="Edit" type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

