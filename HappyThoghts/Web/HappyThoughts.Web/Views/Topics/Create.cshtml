@model HappyThoughts.Web.ViewModels.InputModels.CreateTopicInputModel

@{
    ViewData["Title"] = "Create";
}


<h1 class="text-center mb-3">Create Topic</h1>
<hr />
<div >
    <div class="offset-md-3 col-md-6 offset-sm-0 col-sm-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureUrl" class="control-label"></label>
                <input asp-for="PictureUrl" class="form-control" />
                <span asp-validation-for="PictureUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryName">Example select</label>
                <select asp-for="CategoryName" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option>@category.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input asp-controller="Topics" asp-action="Create" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="offset-md-3 col-md-6 offset-sm-0 col-sm-12">
    <a asp-controller="Home" asp-action="Index">Back to Home Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
